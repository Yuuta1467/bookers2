<div>
  <h3><%= @user.name %></h3>
  <h3><%= @user.introduction %></h3>
  <%= image_tag @user.get_profile_image(100, 100) %>
  <p><%= link_to "プロフィール編集", edit_user_path %></p>
</div>

<% @books.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>
    <%= book.title %>
  <% end %>
  <%= book.body %>
  <%= book.user.name %>
</div>
<% end %>