<h1>Books#index</h1>

<%= form_with model: @book do |f| %>
<h4>Title</h4>
  <%= f.text_field :title %>
<h4>Opinion</h4>
  <%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>

<% @books.each do |book| %>
<div>

  <p>投稿ユーザー画像：<%= image_tag 'sample-author1.jpg' %></p>
  <%= book.user.name %>
  <%= book.title %>
  <%= book.body %>

</div>
<% end %>
