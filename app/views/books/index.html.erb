<h1>Books#index</h1>

<%= form_with model: @book do |f| %>
<h4>Title</h4>
  <%= f.text_field :title %>
<h4>Opinion</h4>
  <%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>

<% @books.each do |book| %>
<div>
　<p>投稿ユーザー画像：<%= image_tag book.user.get_profile_image(100,100) %></p>
  <%= book.user.name %>
  <%= link_to book_path(book.id) do %>
    <%= book.title %>
  <% end %>
  <%= book.body %>

</div>
<% end %>
