<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2 class="mt-3">New book</h2>
        <%= form_with model: book do |f| %>
          <p>Title</p>
        <%= f.text_field :title %>
          <p>Opinion</p>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
        <% end %>
    </div>
  </div>
</div>